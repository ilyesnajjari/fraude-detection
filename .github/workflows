name: CI

on:
  push:
    branches: [main]   # ou ta branche principale
  pull_request:
    branches: [main]

jobs:
  test:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout code
      uses: actions/checkout@v3

    - name: Set up Python
      uses: actions/setup-python@v4
      with:
        python-version: '3.10'  # ou la version Python que tu utilises

    - name: Install dependencies
      run: |
        python -m pip install --upgrade pip
        pip install -r requirements.txt  # ou installer tes d√©pendances autrement

    - name: Run tests
      run: |
        pytest  # ou ta commande pour lancer les tests